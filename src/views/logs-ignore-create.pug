extends layouts/main

block content
  h2 Add ignore rule
  .card.bg-dark.text-light
    .card-body
      form(method="post" action=`${baseUrl}/logs/ignore/create` class="row g-3")
        .col-md-4
          label.form-label(for="matcher") Matcher
          select#matcher.form-select(name="matcher")
            option(value="fixed") Fixed URL
            option(value="prefix") URL Matching (prefix)
        .col-md-8
          label.form-label(for="path") Path
          input#path.form-control(type="text" name="path" required placeholder="/api/ignore")
        .col-12
          label.form-label(for="note") Note
          input#note.form-control(type="text" name="note" placeholder="optional")
        .col-12
          label.form-label(for="status") Status
          select#status.form-select(name="status")
            option(value="1") Enabled
            option(value="0") Disabled
        .col-12
          button.btn.btn-primary(type="submit") Save
          a.btn.btn-secondary.ms-2(href=`${baseUrl}/logs/ignore`) Cancel


